from alpine:latest

RUN apk update

RUN apk add --no-cache python3-dev gcc mysql-client libffi-dev musl-dev zlib-dev jpeg-dev curl

RUN pip3 install --upgrade pip

WORKDIR /app

COPY FlaskRequirements.txt /app

RUN pip3 --no-cache-dir install -r FlaskRequirements.txt

ENTRYPOINT  ["python3"]

CMD ["app.py"]
